<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ChessMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ChessMAUI.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="ChessMAUI">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:Home}"
        Route="Home" />
    <ShellContent
        Title="Game"
        ContentTemplate="{DataTemplate views:GameBoard}"
        Route="Game" />
    <ShellContent
        Title="Credits"
        ContentTemplate="{DataTemplate views:Credits}"
        Route="Credits" />
    <ShellContent
        Title="PlayerCreation"
        ContentTemplate="{DataTemplate views:PlayerCreation}"
        Route="PlayerCreation" />
    <ShellContent
        Title="PlayerSelection"
        ContentTemplate="{DataTemplate views:PlayerSelection}"
        Route="PlayerSelection" />
    <ShellContent
        Title="Preselection"
        ContentTemplate="{DataTemplate views:Preselection}"
        Route="Preselection" />
    <ShellContent
        Title="ScoreBoard"
        ContentTemplate="{DataTemplate views:ScoreBoard}"
        Route="ScoreBoard" />
    <ShellContent
        Title="Setting"
        ContentTemplate="{DataTemplate views:Setting}"
        Route="Setting" />
    <ShellContent
        Title="Essai"
        ContentTemplate="{DataTemplate views:Essai}"
        Route="Essai" />
</Shell>